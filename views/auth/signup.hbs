<main class="auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Sign up</h1>
            <div class="input-group md-form form-sm form-2 pl-0">
                <nav class="navbar navbar-light bg-light">
                    <form action="/auth/signup" method="POST">
                        <div class="form-group">
                            <label for="field1">Username</label>
                            <input name="username" type="text" class="form-control search-control" id="field1">
                        </div>
                        <div class="form-group">
                            <label for="field2">Password</label>
                            <input name="password" type="password" class="form-control" id="field2">
                        </div>

                        <button type="submit" class="btn btn-green btn-primary btn-lg">Sign up!</button>

                        {{#if errorMsg}}
                        <div id="errorMsg">{{{errorMsg}}}</div>
                        {{/if}}
                        <p>Do you already have an account? <a class="pink-anchor" href="/login"> Â¡Log in!</a></p>

                    </form>

                </nav>
            </div>
        </div>
    </div>
</main>