<div class="container">
    <h1>Search your recipe!</h1>
    <form action="/recipes/search" method="get">
        <label for="name"> Name of the recipe</label>
        <input type="text" name="query" id="name">
        <fieldset>
            <legend>Filter your interests!</legend>
            <label for="vegetarian">Vegetarian</label>
            <input type="checkbox" name="filter" id="vegetarian" value="vegetarian">
            <label for="vegan">Vegan</label>
            <input type="checkbox" name="filter" id="vegan" value="vegan">
            <label for="veryHealthy">Healthy</label>
            <input type="checkbox" name="filter" id="veryHealthy" value="veryHealthy">
            <label for="gluttenFree">Gluten free</label>
            <input type="checkbox" name="filter" id="glutenFree" value="glutenFree">
            <label for="cheap">Cheap</label>
            <input type="checkbox" name="filter" id="cheap" value="cheap">
        </fieldset>
    </form>
    <div class="input-group md-form form-sm form-2 pl-0">
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor"
                            xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                            <path fill-rule="evenodd"
                                d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                        </svg>
                    </div>
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username"
                        aria-describedby="basic-addon1">
                </div>
            </form>
        </nav>
    </div>
    <div class="row justify-content-center">
        {{#each results}}
        <div class="col-3">
            {{>basicCardRecipe this}}
        </div>
        {{/each}}
    </div>
</div>