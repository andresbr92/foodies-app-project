<main class="recipe-form-container">
    <div class="container">
        <div class="row">
            <div class="recipe-detailed-form">
                <div class="col-md-6">
                    <h1 style="font-weight: 100">Edit recipe: {{title}}</h1>
                    <div>
                        <label for="title">Actual Image</label>
                        <img class="detailedImageRecipe" src="{{image}}" alt="{{image}}">
                    </div>
                </div>
                <div class="col-md-6">
                    <form action="/profile/my-recipes/edit/{{id}}" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title of the Recipe</label>
                            <input name="title" type="text" class="form-control" id="title" value="{{title}}">
                            <hr>
                        </div>
                        <div class="container">
                            <span>Choose a new image</span>
                            <input class="spaceBetween" type="file" name="imageFile" value="{{image}}">
                        </div>
                        <hr>

                        <div class="row form-group ingredients-container">
                            <div class="col-md-4 unique-ingredient-container">
                                <div class="addImput">
                                    <input type="button" class="add-ingredient btn btn-green btn-xxs" value="&#10010;">
                                    <label class="label-ing" for="amount">Amount</label>
                                </div>
                                <div id="amountADD">
                                    {{#each amounts}}
                                    <input name="amount" type="text" class="separated-input form-control" id="amount"
                                        value="{{this}}">
                                    {{/each}}
                                </div>
                            </div>
                            <div class="col unique-ingredient-container">
                                <label class="label-ing" for="ingredients">Ingredients</label>
                                <div id="ingredientADD">
                                    {{#each ingredients}}
                                    <input name="ingredients" type="text" class="form-control separated-input"
                                        value="{{this}}">
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row form-group steps-container">
                            <div class="col-md-12">
                                <input type="button" class="add-step btn btn-green btn-xxs " value="&#10010;">
                                <label for="steps">Steps</label>
                                <div class="unique-steps-container">
                                    {{#each steps}}
                                    <input name="steps" type="text" class="separated-input form-control" id="steps"
                                        value="{{this}}">
                                    {{/each}}
                                </div>
                                <div class="col-md-12 nutritions-container">
                                    <label for="nutrition">Nutrition values</label>
                                    <div class="unique-nutrition-container">
                                        <div class="col-6 nutrition first">
                                            <label for="calories">Calories | <small>kcal</small></label>
                                            <input name="calories" type="text" class="form-control separated-input"
                                                id="calories" value="{{nutrients.calories}}">
                                            <label for="proteins">Proteins | <small>gr</small></label>
                                            <input name="proteins" type="text" class="form-control separated-input"
                                                id="proteins" value="{{nutrients.proteins}}">
                                        </div>
                                        <div class="col-6 nutrition">
                                            <label for="fat">Fat | <small>gr</small></label>
                                            <input name="fat" type="text" class="form-control separated-input" id="fat"
                                                value="{{nutrients.fat}}">
                                            <label for="carbohydrates">Carbohydrates | <small>gr</small></label>
                                            <input name="carbohydrates" type="text" class="form-control separated-input"
                                                id="carbohydrates" value="{{nutrients.carbohydrates}}">
                                        </div>
                                    </div>
                                    <div class="col-12 nutrition">
                                        <input type="button" value="Guess Nutrition"
                                            class="btn btn-green btn-sm guess-nutrition-btn">
                                        <hr>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <br>
                                    <label for="">Tags</label>
                                    <fieldset>
                                        <label for="vegetarian">Vegetarian</label>
                                        <input type="checkbox" name="vegetarian" id="vegetarian" {{#if vegetarian}}
                                            checked {{/if}}>
                                        <label for="vegan">Vegan</label>
                                        <input type="checkbox" name="vegan" id="vegan" {{#if vegan}} checked {{/if}}>
                                        <label for="veryHealthy">Healthy</label>
                                        <input type="checkbox" name="veryHealthy" id="veryHealthy" {{#if veryHealthy}}
                                            checked {{/if}}>
                                        <label for="glutenFree">Gluten free</label>
                                        <input type="checkbox" name="glutenFree" id="glutenFree" {{#if glutenFree}}
                                            checked {{/if}}>
                                        <label for="cheap">Cheap</label>
                                        <input type="checkbox" name="cheap" id="cheap" {{#if cheap}} checked {{/if}}>
                                    </fieldset>
                                </div>
                                <div class="form-group">
                                    <label for="preparationMinutes">Preparation minutes</label>
                                    <input name="preparationMinutes" type="number" class="form-control"
                                        id="inversions-input" value="{{preparationMinutes}}">
                                    <label for="cookingMinutes">Cooking Minutes minutes</label>
                                    <input name="cookingMinutes" type="number" class="form-control"
                                        id="inversions-input" value="{{cookingMinutes}}">
                                </div>
                                <button type="submit" class="btn btn-md btn-green">Edit</button>
                                <a href="/profile/my-recipes/" class="btn btn-md btn-green">Go back</a>
                            </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/javascripts/API-DDBB-Handler.js"></script>
    <script src="/javascripts/add-recipes.js"></script>
</main>