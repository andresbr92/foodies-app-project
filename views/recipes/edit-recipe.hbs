<div class="container">
    <div class="row">
        <div class="recipe-detailed">
            <div class="col-md-6">
                <h1 style="font-weight: 100">Edit recipe: {{title}}</h1>
                <div>
                    <label for="title">Actual Image</label>
                    <img class="detailedImageRecipe" src="{{image}}" alt="{{image}}">
                </div>
            </div>
            <div class="col-md-6">
                <form action="/profile/my-recipes/edit/{{id}}" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title of the Recipe</label>
                        <input name="title" type="text" class="form-control" id="title" value="{{title}}">
                        <hr>
                    </div>
                    <div class="container">
                        <span>Choose a new image</span>
                        <input class="spaceBetween" type="file" name="imageFile" value="{{image}}">
                    </div>
                    <hr>

                    <div class="row form-group ingredients-container">
                        <div class="col-md-4 unique-ingredient-container">
                            <a href="#" class="add-ingredient btn btn-dark">+</a>
                            <label for="amount">Amount</label>
                            <div id="amountADD">
                                {{#each amounts}}
                                <input name="amount" type="text" class="form-control" id="amount" value="{{this}}">
                                {{/each}}
                            </div>
                        </div>
                        <div class="col-md-5 unique-ingredient-container">
                            <label for="ingredients">Ingredients</label>
                            <div id="ingredientADD">
                                {{#each ingredients}}
                                <input name="ingredients" type="text" class="form-control" id="ingredients"
                                    value="{{this}}">
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <hr>

                    <div class="row form-group steps-container">
                        <div class="col-md-12">
                            <a href="#" class="add-step btn btn-dark">+</a>
                            <label for="steps">Steps</label>
                            <div class="unique-steps-container">
                                {{#each steps}}
                                <input name="steps" type="text" class="form-control" id="steps" value="{{this}}">
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <br>
                        <fieldset>
                            <legend>Filter your interests!</legend>
                            <label for="vegetarian">Vegetarian</label>
                            <input type="checkbox" name="vegetarian" id="vegetarian" {{#if vegetarian}} checked {{/if}}>
                            <label for="vegan">Vegan</label>
                            <input type="checkbox" name="vegan" id="vegan" {{#if vegan}} checked {{/if}}>
                            <label for="veryHealthy">Healthy</label>
                            <input type="checkbox" name="veryHealthy" id="veryHealthy" {{#if veryHealthy}} checked
                                {{/if}}>
                            <label for="glutenFree">Gluten free</label>
                            <input type="checkbox" name="glutenFree" id="glutenFree" {{#if glutenFree}} checked {{/if}}>
                            <label for="cheap">Cheap</label>
                            <input type="checkbox" name="cheap" id="cheap" {{#if cheap}} checked {{/if}}>
                        </fieldset>
                    </div>
                    <div class="form-group">
                        <label for="preparationMinutes">Preparation minutes</label>
                        <input name="preparationMinutes" type="number" class="form-control" id="inversions-input"
                            value="{{preparationMinutes}}">
                        <label for="cookingMinutes">Cooking Minutes minutes</label>
                        <input name="cookingMinutes" type="number" class="form-control" id="inversions-input"
                            value="{{cookingMinutes}}">
                    </div>
                    <button type="submit" class="btn btn-md btn-green">Edit</button>
                    <a href="/profile/my-recipes/" class="btn btn-md btn-green">Go back</a>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/add-recipes.js"></script>