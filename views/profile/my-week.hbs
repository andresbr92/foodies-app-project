<main class="main-my-week">
    <section class="my-week">
        <div class="container">
            <h1>My week</h1>
            <a href="#" class="btn btn-md btn-green main-btn-save-changes">Save changes</a>
            {{#each daysInfo}}
            <h4>{{date}}</h4>
            <article class="meal-container">
                <div class="row dragabbles-container" data-date="{{fullDate}}">
                    {{#each cards}}
                    <div class="col-3 draggable-item" draggable="true" data-meal={{id}}>
                        {{> smallCardRecipe this.originalRecipe}}
                    </div>
                    {{/each}}
                </div>
            </article>
            {{/each}}
        </div>
    </section>
</main>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="../../javascripts/API-DDBB-Handler.js"></script>
<script src="../../javascripts/week-meal.js"></script>