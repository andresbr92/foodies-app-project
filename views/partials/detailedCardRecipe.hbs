<main class="recipe-details">
    <div class="row">
        <div class="col-md-6">
            <img src="{{image}}" alt="{{title}}">
        </div>
        <div class="col-md-6">
            <h1>Details of recipe {{title}}</h1>
            <h4>Ingredients</h4>
            <ul>
                {{#each extendedIngredients}}
                <li>{{original}}</li>
                {{/each}}
            </ul>
            <h4>Instructions</h4>
            <ul>
                {{#each analyzedInstructions}}
                {{#each steps}}
                <li>{{step}}</li>
                {{/each}}
                {{/each}}
            </ul>
        </div>
    </div>

</main>