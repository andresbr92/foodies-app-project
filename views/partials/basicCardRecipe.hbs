<article class="recipe-card">
    <img src="{{image}}" alt="{{title}}">
    <h3>{{title}}</h3>
    <ul>
        <li>Preparation: {{preparationMinutes}} min</li>
        <li>Cooking: {{cookingMinutes}} min</li>
    </ul>
    <ul>
        {{#if vegetarian}}
        <li>vegetarian</li>
        {{/if}}
        {{#if vegan}}
        <li>vegan</li>
        {{/if}}
        {{#if veryHealthy}}
        <li>Healthy</li>
        {{/if}}
        {{#if glutenFree}}
        <li>Gluten free</li>
        {{/if}}
    </ul>
    <a href="/recipes/details/{{id}}">See details</a>
</article>