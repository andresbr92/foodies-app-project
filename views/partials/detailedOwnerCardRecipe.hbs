<div class="container">
    <main class="recipe-details">
        <div class="row">
            <div class="recipe-detailed">
                <div class="col-md-6">
                    <img class="detailedImageRecipe" src="{{image}}" alt="{{title}}">
                </div>
                <div class="col-md-6">

                    <h1>Details of recipe {{title}}</h1>
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>Ingredients</h4>
                            <ul>
                                {{#each ingredients}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            <h4>Amount</h4>
                            <ul>
                                {{#each ingredientsAmount}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>

                    <div class="container">

                        {{#if vegetarian}}
                        <span>vegetarian |</span>
                        {{/if}}
                        {{#if vegan}}
                        <span>vegan |</span>
                        {{/if}}
                        {{#if veryHealthy}}
                        <span>very Healthy |</span>
                        {{/if}}
                        {{#if glutenFree}}
                        <span>Gluten free |</span>
                        {{/if}}
                        {{#if cheap}}
                        <span>Cheap</span>
                        {{/if}}

                    </div>
                    <div class="container btn butoner">
                        <a class="btn btn-sm btn-green " href="/profile/my-recipes/edit/{{id}}">Edit</a>

                        <form class="btn btn-sm btn-green" action="/profile/my-recipes/delete/{{id}}" method="post">
                            <button type="submit">Remove</button>
                        </form>
                    </div>
                </div>
            </div>



        </div>
        <div class="row">
            <div class="steps-container">
                <div class="col-md-12">
                    {{#if steps}}
                    <h4>Instructions</h4>
                    <ul>
                        {{#each steps}}
                        <li>{{this}}</li>
                        {{/each}}
                        
                    </ul>
                    {{/if}}
                </div>
            </div>
        </div>

    </main>
</div>