<main class="recipe-details">
    <div class="container">
        <div class="recipe-detailed">
            <h1>Details of recipe {{title}}</h1>
            <div class="row first-row">
                <div class="col-md-6">
                    <img class="detailedImageRecipe" src="{{image}}" alt="{{title}}">
                </div>
                <div class="col-md-6 col-with-padding">
                    <h4>Ingredients</h4>
                    <ul>
                        {{#each ingredientsAmount}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="row last-row">
                <div class="steps-container">
                    <div class="col-md-12">
                        <hr>
                        {{#if steps}}
                        <h4>Instructions</h4>
                        <ul>
                            {{#each steps}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </div>
                </div>
                <div class="tags-cont">
                    {{#if vegetarian}}
                    <span>vegetarian |</span>
                    {{/if}}
                    {{#if vegan}}
                    <span>vegan |</span>
                    {{/if}}
                    {{#if veryHealthy}}
                    <span>very Healthy |</span>
                    {{/if}}
                    {{#if glutenFree}}
                    <span>Gluten free |</span>
                    {{/if}}
                    {{#if cheap}}
                    <span>Cheap</span>
                    {{/if}}
                </div>
            </div>
            <div class="container btn butoner">
                <a class="btn btn-sm btn-green " href="/profile/my-recipes/edit/{{id}}">Edit</a>
            </div>
        </div>
    </div>
</main>